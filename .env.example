# Copy to .env and fill in secrets before running the app.

OPENAI_API_KEY=
OPENAI_MODEL_NAME=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Set providers: choose from openai, huggingface, ollama for LLM provider
# and openai or huggingface for embeddings.
EMBEDDING_PROVIDER=openai
LLM_PROVIDER=openai

# Hugging Face configuration (required if using huggingface providers)
# HUGGINGFACE_API_TOKEN=
# HUGGINGFACE_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
# HUGGINGFACE_CHAT_MODEL=HuggingFaceH4/zephyr-7b-beta

# Ollama configuration (requires local Ollama install)
# OLLAMA_MODEL=llama3
